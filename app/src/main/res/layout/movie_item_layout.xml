<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_iv"
        android:layout_width="250dp"
        android:layout_height="400dp"
        tools:src="@drawable/avengers_title"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movie_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/kanit_medium"
        android:gravity="center"
        tools:text="Avengers: Endgame"
        app:layout_constraintTop_toBottomOf="@id/item_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/rating_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanit_regular"
        app:layout_constraintTop_toBottomOf="@id/movie_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="7.4" />

    <ImageView
        android:id="@+id/rating_star_iv"
        android:layout_width="16dp"
        android:layout_height="0dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/star"
        app:layout_constraintBottom_toBottomOf="@id/rating_tv"
        app:layout_constraintEnd_toStartOf="@id/rating_tv"
        app:layout_constraintTop_toBottomOf="@id/movie_title_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>